container_commands:
  00_create_dir:
    command: "mkdir -p /var/log/app-logs"
  01_change_permissions:
    command: "chmod g+s /var/log/app-logs"
  02_change_owner:
    command: "chown wsgi:wsgi /var/log/app-logs"
  03_create_log_file:
    command: "touch /var/log/app-logs/django_debug.log"
  04_change_permissions_log_file:
    command: "chmod g+s /var/log/app-logs/django_debug.log"
  05_change_owner_log_file:
    command: "chown wsgi:wsgi /var/log/app-logs/django_debug.log"