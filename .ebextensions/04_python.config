container_commands:
  01_migrate:
    command: "pwd && source /opt/python/run/venv/bin/activate && python shakespeare/manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source /opt/python/run/venv/bin/activate && python shakespeare/manage.py createsu"
    leader_only: true
  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python shakespeare/manage.py collectstatic --noinput"
  04_install_supervisor:
    test : '[ ! /usr/local/bin/supervisorctl ] && echo "supervisor not installed"'
    command: "source /opt/python/run/venv/bin/activate && sudo easy_install supervisor"


option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "shakespeare.settings.production"
    "PYTHONPATH": "./shakespeare"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: shakespeare/shakespeare/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "www/static/"
